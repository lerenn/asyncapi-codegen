    // Send the message 
    if err := c.Publish{{cutSuffix (opToMsgTypeName $value) "Message" }}On{{opToChannelTypeName $value}}(ctx, {{- if .Channel.Follow.Parameters}}params,{{- end}} msg); err != nil {
