    if bs == nil {
        return nil, ErrNilBrokerController
    }

    return &{{ .Prefix }}Controller{
        brokerController: bs,
        stopSubscribers:  make(map[string]chan interface{}),
        logger:           log.Silent{},
        middlewares:      make([]middleware.Interface, 0),
