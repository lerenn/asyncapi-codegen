func (c *{{ $.Prefix }}Controller) Publish{{namify $key}}(ctx context.Context, msg {{channelToMessageTypeName $value}}) error {
{{- end }}
    // Get channel path
    path := {{ generateChannelPath $value }}

    {{if ne $value.GetChannelMessage.CorrelationIDLocation "" -}}
