    // Subscribe to broker channel
    msgs, stop, err := cc.brokerController.Subscribe(path)
    if err != nil {
        return {{channelToMessageTypeName $value}}{}, err
    }

    // Close subscriber on leave
    defer func(){ stop <- true } ()

    // Execute publication 
    if err := pub(); err != nil {
        return {{channelToMessageTypeName $value}}{}, err
