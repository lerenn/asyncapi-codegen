func (msg {{namify .Name}}Message) CorrelationID() string {
    {{if $.CorrelationIDRequired -}}
        return msg.{{referenceToStructAttributePath $.CorrelationIDLocation}}
    {{- else -}}
    if msg.{{referenceToStructAttributePath $.CorrelationIDLocation}} != nil{
        return *msg.{{referenceToStructAttributePath $.CorrelationIDLocation}}
    }

    return ""
    {{- end}}
}

