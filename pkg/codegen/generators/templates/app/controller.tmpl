// Unsubscribe{{namify $key}} will unsubscribe messages from '{{$key}}' channel
func (ac *AppController) Unsubscribe{{namify $key}}() {
    stopChan, exists := ac.stopSubscribers["{{$key}}"]
    if !exists {
        return
    }

    stopChan <- true
    delete(ac.stopSubscribers, "{{$key}}") 
